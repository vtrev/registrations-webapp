<body>
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6 center">
        </div>
        <div class="col-3"></div>
    </div>
    <div class="row center">
        <div class="col-12">
            <h4 class={{status}}>{{messages.info}}</h4>
        </div>
    </div>
    <div class="row center inblock">

        <div class="col-12">
            <form class="numberPlateForm" method="POST" action="/registrations">
                <input class='center .blue-on-hover' name="regEntered" id="inputBox" type="console.text" placeholder="Enter number plate here"
                    required="required" pattern="[A-Za-z0-9 ]+" maxlength="11" title="please only enter alphanumeric characters">
                <button class=".blue-on-hover" id="addButton" type="submit" form="numberPlateForm">
                    <strong>Add</strong>
                </button>
            </form>

        </div>

    </div>
    </div>
    <div class="row">
        <div class="col-5"></div>
        <div class="col-2 " id="addBtn">
        </div>
        <div class="col-5"></div>

    </div>

    <div class="row inblock">
        <div class="center col 12">
            <form class="form-input" method="GET" action="/displayPlates">
                <label class="label">Filter by Town</label>
                <br>
                <select class="" name="town">
                    <option value="allTowns">All Towns</option>
                    <option value="CA">CapeTown</option>
                    <option value="CY">Bellville</option>
                    <option value="CW">Worcester</option>
                    <option value="CL">Stellenbosch</option>
                    <option value="CAW">George</option>
                    <option value="CEO">Grabouw</option>
                    <option value="CFR" Kuilsrivier></option>
                </select>
                <button id='filterButton' type="submit">Apply filter </button>
            </form>

        </div>
    </div>
    <div class="row">
        <div class="col-3"></div>

        <div class="col-6 plates-area center">
            <ul id="numberPlates" class="">

                {{#each this.regs}}
                <li>{{this.registration}}</li>
                {{/each}}
            </ul>

        </div>
        <div class="col-3"></div>
    </div>