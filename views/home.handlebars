<body>
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6 center">
        </div>
        <div class="col-3"></div>
    </div>
    <div class="row">
        <div class="col-3"></div>

        <div class="col-6">
            <form id="numberPlateForm" method="POST" action="/registrations">
                <input class='center' name="regEntered" id="inputBox" type="console.text" placeholder="Enter number plate here" required="required"
                    pattern="[A-Za-z0-9 ]+" maxlength="10" title="please only enter alphanumeric characters">
            </form>
        </div>
        <div class="col-3"></div>
    </div>
    <div class="row">
        <div class="col-5"></div>
        <div class="col-2" id="addBtn">
            <button id="addButton" type="submit" form="numberPlateForm">
                <strong>Add</strong>
            </button>

        </div>
        <div class="col-5"></div>

    </div>

    <div class="row">
        <div class="center col 12">
            <form method="GET" action="/displayPlates">
                Filter by town :
                <label>Town</label>
                <select name="town">
                    <option value="allTowns">All Towns</option>
                    <option value="CA">CapeTown</option>
                    <option value="CY">Bellville</option>
                    <option value="CW">Worcester</option>
                    <option value="CL">Stellenbosch</option>
                    <option value="CAW">George</option>
                    <option value="CEO">Grabouw</option>
                    <option value="CFR" Kuilsrivier></option>
                </select>
                <button id='filterButton' type="submit">Apply filter </button>
            </form>

        </div>


    </div>


    <div class="row">
        <div class="col-3"></div>

        <div class="col-6">
            <ul id="numberPlates" class=" center numberPlates">

                {{#each this.regs}}
                <li>{{this.registration}}</li>
                {{/each}}
            </ul>

        </div>
        <div class="col-3"></div>


    </div>